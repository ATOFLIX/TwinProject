{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}
    
        {{ form_row(form.nom, {'label': 'Nom','attr': {'placeholder': 'Votre nom ...'}}) }}
        {{ form_row(form.prenom, {'label': 'Prénom','attr': {'placeholder': 'Votre prénom ...'}}) }}
        {{ form_row(form.username, {'label': 'Pseudo :','attr': {'placeholder': 'Votre pseudo ...'}}) }}
        {{ form_row(form.email, {'label': 'Adresse e-mail :','attr': {'placeholder': 'Votre adresse e-mail ...'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe :','attr': {'placeholder': 'Votre mot de passe ...'}}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe','attr': {'placeholder': 'Retapez votre mot de passe ...'}}) }}

        <button type="submit" class="btn btn-success">Inscription !</button>

    {{ form_end(form) }}

{% endblock %}