{% extends 'base.html.twig' %}

{% block title %}Affichage{% endblock %}

{% block body %}
<h1>Affichage de la séquence enregistrée</h1>

{%  set lignes=sequence |json_decode|join('\r\n')| split(',') %}			{# filtre qui ajoute un séparateur à la fin de la ligne #}
<table>
{% for  une in sequence |json_decode %}
<tr><td>{{ une }}</td></tr>

{% endfor %}

</table>

<a href="{{ path('sequence_traitementNom') }}" target="_blank">Enregistrement d'une séquence</a><br>
<a href="{{ path('sequence_selectionnerSequence') }}" target="_blank">Affichage et suppression des séquences </a>

{% endblock %}
