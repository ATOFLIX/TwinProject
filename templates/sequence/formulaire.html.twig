{% extends 'base.html.twig' %}

{% block title %}
Sélection fichiers!!
{% endblock %}

{% block body %}
<form action="{{ path('sequence_traitement') }}" method="post">	{# renvoie vers la route "sequence_traitement" qui va traiter le formulaire#}

	<div class="form-group">
		<label for="exampleSelect1">Veuillez sélectionner une séquence: </label>
		 <select class="form-control" name="selection"	id="exampleSelect1">
			{%  for fichier in listeFichiers %}
			<option>{{ fichier }}</option>
			{% endfor %}

		</select>
	</div>
	
	{% if listeFichiers %}
	

	<input type="submit" name="afficher" value="afficher" class="btn btn-outline-success" /> 
	<input type="submit" name="supprimer" value="supprimer" class="btn btn-outline-danger" />
	<input type="reset" value="annuler" class="btn btn-outline-info" />

{% else %}
	<input type="submit"  name="afficher" value="afficher" disabled class="btn btn-outline-success" /> 
	<input type="submit" name="supprimer" value="supprimer" disabled class="btn btn-outline-danger" />
	<input type="reset" value="annuler" disabled class="btn btn-outline-info" />
	{% endif %}
</form>





{% endblock %}
